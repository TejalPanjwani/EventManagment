
<h1> Create admin account </h1>

<%= form_with model: @user ,url: admin_status_index_path , local: true do |f| %>
        <div id="error_explanation">
        <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li> <%= msg %></li>
            
          <%end%>
        </ul>
        <% end %>  
        </div>
    
        <%= f.text_field :name, placeholder: "Name" %> <br><br>

        <%= f.text_field :email, placeholder: "email" %> <br><br>
        
        <%= f.text_field :password, placeholder: "Password" %> <br><br>

        <%= f.text_field :password_confirmation, placeholder: "password_confirmation" %> <br><br>
        <%= f.submit "singup" %>
<% end %>


