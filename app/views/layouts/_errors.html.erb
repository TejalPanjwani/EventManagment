<% flash.each do |key, value| %>
    <div class="container">
        <div class="<%= flash_class(key) %>">
            <button type="button" class="close" data-dismiss="alert">&times;</button>

            <% if value.kind_of?(Array) %>
                <% value.each do |msg| %>
                    <%= msg %>
                    <br>
                <% end %>
            <% else %>
                <%= value %>
            <% end %>
        </div>
    </div>
<% end %>