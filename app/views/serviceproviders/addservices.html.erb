
<div class="centertext">
        <h2> Add Service </h2>
</div>

<% if @service.checkstatuts(current_user.id) == "penddingservice" %>

        <div class="container">
                <div class="jumbotron">

                        <h3> still pendding <h3> 

                </div>
        </div>


<% elsif @service.checkstatuts(current_user.id) == "acceptservice" %>

        <div class="container">
                <div class="jumbotron">
 
                        <%= form_with model: @service ,url: serviceproviders_path , local: true do |f| %>
                                <div id="error_explanation">
                                <% if @service.errors.any? %>
                                <ul>
                                  <% @service.errors.full_messages.each do |msg| %>
                                    <li> <%= msg %></li>
                                    
                                  <%end%>
                                </ul>
                                <% end %>  
                                </div>

                                <div class="form-group">
                                        <div class="control-label col-md-2">
                                                <%= f.label :title %>
                                        </div>
                                        <div class="col-sm-10">     
                                                <%= f.select(:title,Title::LIST) %>
                                        </div>
                                </div>
                                <br>
                                <br>
                                <br> 

                                <div class="form-group">
                                        <div class="control-label col-md-2">
                                                <%= f.label :nameofsevice %>
                                        </div>
                                        <div class="col-sm-10">     
                                                <%= f.text_field :nameofsevice, placeholder: "Name of place or give title of service",class:"form-control" %>
                                        </div>
                                </div>
                                <br>
                                <br>
                                <br>
    

                                <div class="form-group">
                                        <div class="control-label col-md-2">
                                                <%= f.label :city %>
                                        </div>
                                        <div class="col-sm-10">     
                                                <%= f.text_field :city, placeholder: "city" ,class:"form-control"%>
                                        </div>
                                </div>
                                <br>
                                <br>
                                <br>

                                <div class="form-group">
                                        <div class="control-label col-md-2">
                                                <%= f.label :address %>
                                        </div>
                                        <div class="col-sm-10">     
                                                <%= f.text_field :address, placeholder: "address" ,class:"form-control"%>
                                        </div>
                                </div>
                                <br>
                                <br>
                                <br>

                                <div class="form-group">
                                        <div class="control-label col-md-2">
                                                <%= f.label :contact %>
                                        </div>
                                        <div class="col-sm-10">     
                                                <%= f.text_field :contact, placeholder: "contact",class:"form-control" %>
                                        </div>
                                </div>
                                <br>
                                <br>
                                <br>
                                <div class="form-group">
                                        <div class="control-label col-md-2">
                                                <%= f.label :image %>
                                        </div>
                                        <div class="col-sm-10">     
                                                <%= f.file_field :service_image %>
                                        </div>
                                </div>
                                <br>
                                <br>
                                <br>

                                <div class="form-group">
                                        <div class="control-label col-md-2">
                                                <%= f.label :description %>
                                        </div>
                                        <div class="col-sm-10">     
                                                <%= f.text_area :description, placeholder: "description",class:"form-control" %> <br><br>
                                        </div>
                                </div>
                                <br>
                                <br>
                                <br>


                                <div class="form-group">
                                        <div class="control-label col-sm-offset-5 col-sm-2">
                                                <%= f.submit "Submit", class:"btn btn-primary btn-block btn-size" %>
                                        </div>    
                                </div>

                        <% end %>
                </div>
        </div>


<% elsif @service.checkstatuts(current_user.id) == "rejectservice" %>
<div class="container">
        <div class="jumbotron">

                <h3> sorry! reject </h3>

        </div>
</div>
<% end %>
















