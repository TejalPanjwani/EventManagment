<div style="padding-top: 30px;">
    <div class="card col-sm-8 col-sm-offset-2" >
        <div class="card-body">
            <div class="container">

                <h2> Profile </h2>
                <br>

                <div class="form-group">
                    <div class="control-label col-md-2">
                        <h4><strong>Name:</strong></h4>
                    </div>
                    <div class="col-sm-10">     

                        <h4><%= @user.name %></h4>
                    </div>
                </div>
                <br><br>

                <div class="form-group">
                    <div class="control-label col-md-2">
                        <h4><strong>Email id:</strong></h4>
                    </div>
                    <div class="col-sm-10">     

                        <h4><%= @user.email %></h4>
                    </div>
                </div>
                <br><br>

                <div class="form-group">
                    <div class="control-label col-md-2">
                        <h4><strong>Your type:</strong></h4>
                    </div>
                    <div class="col-sm-10">     

                        <h4><%= @user.typeofhuman %></h4>
                    </div>
                </div>
                <br><br>

                <div class="form-group">
                    <div class="control-label col-md-2">

                        <%= link_to 'Edit profile', edit_serviceprovider_path(@user)  ,  :class=>"btn btn-warning"  %>
                    </div>
                </div>
                <br><br><br><br><br><br><br>
            </div>  
        </div>  
    </div>  
</div>  
