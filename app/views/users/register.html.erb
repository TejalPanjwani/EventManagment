<div style="padding-top: 30px;">
<div class="card col-sm-8 col-sm-offset-2" >
<div class="card-body">
<div class="container">



  <h2> Create your account </h2>
  <br>
  
  <%= form_with model: @user ,url: users_path  , local: true do |f| %>
    <% if @user.errors.any? %>
    
      <%# @user.errors.full_messages.each do |msg| %>
      <% flash[:danger] = @user.errors.full_messages %>
        
      <%#end%>
    <% end %>  

  <div class="form-group">
  <div class="control-label col-md-2">
    <%= f.label :name %>
  </div>
  <div class="col-sm-8">     
   <%= f.text_field :name,placeholder:"Enter name",class:"form-control" %>
  </div>
</div>
<br>
<br>
<br> 

<div class="form-group">
  <div class="control-label col-sm-2">
      <%= f.label :email_id%>
  </div>
  <div class="col-sm-8">     
      <%= f.text_field :email, placeholder: "Enter email id",class:"form-control" %>
  </div>
</div>
<br>
<br>



<div class="form-group">
  <div class="control-label col-sm-2">
      <%= f.label :Choose_type%>
  </div>
  <div class="col-sm-8">     
  <%= f.radio_button :typeofhuman, 'book services' %> Book services <br><br>
  <%= f.radio_button :typeofhuman, 'add services' %> Add services
  </div>
</div>
<br>
<br>
<br>
<br>
<br>


<div class="form-group">
  <div class="control-label col-sm-2">
      <%= f.label :password%>
  </div>
  <div class="col-sm-8">     
      <%= f.password_field :password, placeholder: "Enter password",class:"form-control" %>
  </div>
</div>
<br>
<br>




<div class="form-group">
  <div class="control-label col-sm-2">
      <%= f.label :password_confirmation%>
  </div>
  <div class="col-sm-8">     
      <%= f.password_field :password_confirmation, placeholder: "Enter password again",class:"form-control" %>
  </div>
</div>
<br>
<br>
<br>


<div class="form-group">
  <div class="control-label col-sm-offset-3 col-sm-6">
  <%= f.submit "Singup", class: "btn btn-success btn-block btn-size" %>
  </div>    
</div>
  
<% end %>
<br>
<br>
<br>

